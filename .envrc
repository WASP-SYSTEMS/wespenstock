# check if .venv does not exist
if [ ! -d ".venv" ] ; then
    # Create virtualenv
    echo "Creating virtualenv for $(python3 -V)..."
    python3 -m venv .venv
    # Install dependencies
    echo "Install CRS including development dependencies..."
    .venv/bin/pip3 install -e '.[dev]'
fi
# if not in virtualenv, activate it
if [ -z "$VIRTUAL_ENV" ] ; then
    source .venv/bin/activate
    echo "Activated virtualenv for $(python -V)..."
fi
